<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialog_animation_fade">
        <item name="android:windowEnterAnimation">@anim/fade_in_dialog</item>
        <item name="android:windowExitAnimation">@anim/fade_out_dialog</item>
    </style>

    <style name="title_center">
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white_solid</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="title_start">
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white_solid</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="text_medium">
        <item name="android:fontFamily">@font/proxima_nova_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white_solid</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="btn_style">
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textColor">@color/white_solid</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>

    <style name="text_Form_field">
        <item name="android:textColor">@color/violet_red</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/proxima_nova_medium</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>