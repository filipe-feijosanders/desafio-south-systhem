<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialog_animation_fade">
        <item name="android:windowEnterAnimation">@anim/fade_in_dialog</item>
        <item name="android:windowExitAnimation">@anim/fade_out_dialog</item>
    </style>

    <style name="title_center">
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white_solid</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="title_start">
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white_solid</item>
        <item name="android:textAlignment">textStart</item>
    </style>

</resources>